[Unit]
Description=AdaptText
After=network.target

[Service]
User=thilisadunik
WorkingDirectory=/home/thilisadunik/adapttext/api
EnvironmentFile=/home/thilisadunik/adapttext/.env
ExecStart=/home/thilisadunik/adapttext/api/env/bin/gunicorn -b 127.0.0.1:5000 api:app --log-file /home/thilisadunik/adapttext/api/gunicorn.log --log-level=debug
Restart=always

[Install]
WantedBy=multi-user.target